{{! Use the main layout }}
{{!< main }}

<link rel="stylesheet" href="/css/login.css">

<!-- Playstation button images sourced from Wikipedia (https://commons.wikimedia.org/wiki/File:PlayStation_Certified2.svg) -->
<img src="/images/PlayStationTriangle.png" alt="PlayStation Triangle Button" class="PSButtons" id="PSTriangle">

<section class="register">
    <img src="/images/PlayStationSquare.png" alt = "PlayStation Square Button" class = PSButtons id="PSSquare">
    <section class="register-area">
        <h2>Register</h2>
        <!-- errors will appear here -->
        {{#if error}}
            <p style="color: red;">{{error}}</p>
        {{/if}}
        <form action="/registerUsername" method="POST">
            <!-- the registration form goes here -->
            <input type="text" id="username" name="username" placeholder="Username" required><br><br>
            <button type="submit" id="register-button">Register 
                {{!-- <img src="/images/PlayStationCircle.png" alt="PlayStation Circle Button" class="PSButtons" id="PSCircle">  --}}
            </button>
        </form>
    </section>
    <img src="/images/PlayStationX.png" alt = "PlayStation X Button" class = PSButtons id="PSCross">
</section>

<img src="/images/PlayStationCircle.png" alt="PlayStation Circle Button" class="PSButtons" id="PSCircle"> 